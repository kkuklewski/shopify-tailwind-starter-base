<div class="welcome-section twcss-grid twcss-grid-cols-2 twcss-gap-8">
  <!-- First Column -->
  <div class="twcss-col-span-1">
    <h1 class="twcss-text-3xl twcss-font-semibold twcss-mb-4">{{ section.settings.heading_text }}</h1>
    <p class="twcss-text-gray-600 twcss-mb-4">{{ block.settings.paragraph_text }}</p>
    <a
      href="#"
      class="twcss-bg-blue-500 twcss-text-white twcss-px-4 twcss-py-2 twcss-rounded twcss-hover:bg-blue-600 twcss-transition twcss-duration-300"
      >Button</a
    >
  </div>

  <!-- Second Column -->
  <div class="twcss-col-span-1">
    <span>image here</span>
  </div>
</div>

{% schema %}
{
  "name": "Welcome Section",
  "settings": [
    {
         "id": "heading_text",
   			"type": "text",
   			"label": "place your subtitle",
   			"default": "default subtitle"
   		},
   		{
   			"id": "title",
   			"type": "text",
   			"label": "place your title",
   			"default": "default title"
   		},
   		{
   			"id": "paragraph",
   			"type": "text",
   			"label": "place your paragraph",
   			"default": "default paragraph"
   		}
  ],
  "presets": [
    {
      "name": "Welcome Section",
      "settings": {
        "title": "Welcome Section"
      }
    }
  ]
}
{% endschema %}
